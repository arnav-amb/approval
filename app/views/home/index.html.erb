<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%= csrf_meta_tag %>

<div class="card">
  <span class="card-title">NIT Durgapur Placements/Interns</span>
</div>
<div style="padding: 2%;">
  <p id="flash"></p>
</div>

<div class="container"> <!-- main container-->

  <div class="row" >     <!-- companies cards-->
    <% @company.each do |company| %>
      <div class="col s12 m4">
        <nav>
          <span style="font-size: 20px;" class="brand-logo"><%= company[:name] %></span>
        </nav>
        <div class="card">
          <div class="card-content" >

            <h6><%= company[:offer] %></h6>
            <blockquote><%= company[:description] %></blockquote>
            <h6><b>Eligible Departments</b></h6>
            <%= company[:departments] %>
            <span style="margin-top: 10%;" class="card-title activator">Apply<i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title">FORM<i class="material-icons right">close</i></span>

              <input placeholder="15/IT/XX" id="roll_<%=company[:name]%>" type="text">
              <!-- <%= hidden_field_tag(:company, "#{company[:name]}") %> -->
              <a class="waves-effect waves-light btn" id="<%=company[:name] %>" >Submit</a>

          </div>
        </div>
      </div>
      <script>
      $(document).ready(function(){
          $("#<%= company[:name] %>").click(function(){
              var roll = $("#roll_<%=company[:name]%>").val()
              var company = "<%= company[:name]%>"
              var token = $('meta[name=csrf-token]').attr('content');
              submit_f(roll,company,token);

          });
      });
      </script>
    <% end %>
  </div>
</div>
